<%- include('include/head.ejs') %>
<main class="w-full bg-gray-100 h-screen">
    <div class="header absolute top-0 left-0 py-3 items-center justify-between shadow-md px-6 flex w-full bg-white">
        <h1 class="text-3xl text-indigo-500 font-bold">Удирдах хэсэг</h1>

        <form action="/logout" method="POST">
            <button type="submit">
                logout
            </button>
        </form>
    </div>

    <div style="padding-top: 60px;" class="main flex gap justify-between">
        <div class="sidebar shadow-md w-1/6 h-screen bg-white">
            <ul>
                <li class="list py-3 px-4 text-gray-600 transition duration-300 hover:bg-indigo-500 hover:text-white cursor-pointer font-bold border-b border-gray-300">Мэдээнүүд</li>
                <li class="list py-3 px-4 text-gray-600 transition duration-300 hover:bg-indigo-500 hover:text-white cursor-pointer font-bold border-b border-gray-300">Мэдээ оруулах</li>
                <li class="list py-3 px-4 text-gray-600 transition duration-300 hover:bg-indigo-500 hover:text-white cursor-pointer font-bold border-b border-gray-300">Админ үүсгэх</li>
                <li class="list py-3 px-4 text-gray-600 transition duration-300 hover:bg-indigo-500 hover:text-white cursor-pointer font-bold border-b border-gray-300">Үндсэн сайт</li>
            </ul>
        </div>
        <div class="board p-4 w-5/6">
            <div style="max-height: 800px;" class="w-full overflow-auto p-4 bg-white rounded-xl">
                <section id="section" class="w-full">
                    <% if(articles.length === 0){ %>
                        <h1>Мэдээ байхгүй байна...</h1>
                    <% } else { %>
                        <% for(article of articles) { %>
                            <a href="/read-article/<%= article._id %>">
                                <h1><%= article.title %></h1>
                            </a>
                        <% } %>
                    <% } %>
                </section>
                <section id="section" class="w-full hidden">
                    <form class="w-full flex flex-col" action="/add-article" method="POST">
                        <label for="title">Гарчиг</label>
                        <input type="text" placeholder="Гарчиг" id="title" name="title" class="border mb-4 border-gray-300 py-2 px-4 rounded-md">

                        <select class="w-full py-2 px-4 border border-gray-300 rounded-md mb-4" name="category">
                            <option value="Улс төр">Улс төр</option>
                            <option value="Эдийн засаг">Эдийн засаг</option>
                            <option value="Нийгэм">Нийгэм</option>
                        </select>

                        <label for="thumbNail">Зураг</label>
                        <input type="text" placeholder="Зураг" id="thumbNail" name="thumbNail" class="border mb-4 border-gray-300 py-2 px-4 rounded-md">

                        <label for="body">Мэдээлэл оруулах</label>
                        <textarea type="text" placeholder="Мэдээлэл оруулах" id="body" name="body" rows="4" class="border mb-4 border-gray-300 py-2 px-4 rounded-md"></textarea>

                        <input type="submit" value="Мэдээ оруулах" class="w-full bg-green-400 text-white rounded-lg py-2 px-4">
                    </form>
                </section>
                <section id="section" class="w-full hidden">
                    admin
                </section>
            </div>
        </div>
    </div>
</main>

<script src="/js/admin.js"></script>
<%- include('include/foot.ejs') %>